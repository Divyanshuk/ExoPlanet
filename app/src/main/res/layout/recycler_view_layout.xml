        <TextView
            android:id="@+id/moreInfo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"

            android:padding="16dp"
            android:text="confirmed planet"
            android:textSize="11sp" />

        <!--</LinearLayout>-->
        <!--</FrameLayout>-->
    </LinearLayout>


</LinearLayout>